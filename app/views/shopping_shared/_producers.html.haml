%script{ type: "text/ng-template", id: "shop/producers.html" }
  .content#producers{"ng-controller" => "ProducersTabCtrl"}
    .panel
      .row
        .small-12.columns
          %h5
            = t :shopping_producers_of_hub, hub: '{{enterprise.name}}'
          %ul.small-block-grid-2.large-block-grid-4
            %li{"ng-repeat" => "producer in enterprise.producers"}
              %enterprise-modal
                %i.ofn-i_036-producers
                {{ producer.name }}
